@model PeopleViewModel

<h1>Person List</h1>

<table class="table table-striped table-hover table-bordered">
	<thead>
		<tr>
			<th style="width:30px">#</th>
			<th style="width:100px">Name</th>
			<th>Biography</th>
			<th style="width:300px">Imdb</th>
			<th style="width:70px">PlaceOfBirth</th>
			<th style="width:160px"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var person in Model.People)
		{
			<tr>
				<td>@person.PersonId</td>
				<td>@person.Name</td>
				<td>@person.Biography</td>
				<td>@person.Imdb</td>
				<td>@person.PlaceOfBirth</td>
				<td>
					<a href="/people/personupdate/@person.PersonId" class="btn btn-primary btn-sm">Update</a>
					<form action="/people/persondelete" method="post" style="display: inline">
						@* <input type="hidden" name="PersonId" value="@person.PersonId" /> *@
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>

