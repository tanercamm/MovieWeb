@model Person

<div class="card">
	<div class="row">
		<div class="col-md-3">
			<img src="/persons/@Model.ImageUrl" class="card-img" />
		</div>
		<div class="col-md-9">
			<div class="card-body">
				<h5 class="card-title">@Model.Name</h5>
				<p class="card-text">@Html.Raw(Model.Biography)</p>
			</div>
		</div>
	</div>
</div>