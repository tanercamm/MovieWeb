@model PersonEditViewModel


<h1>Edit Person</h1>
<hr />


<form method="post" asp-controller="Persons" asp-action="PersonUpdate" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-8">
			<div asp-validation-summary="All"></div> @*tüm validation hatalarını gösterir*@
			<input type="hidden" name="PersonId" value="@Model.PersonId" />
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" value="@Model.Name" />
				<span asp-validation-for="Name" class="text-danger"></span> @*ilgili validation hatasını gösterir*@
			</div>

			<div class="mb-3">
				<label asp-for="Biography"></label>
				<textarea asp-for="Biography" class="form-control">@Model.Biography</textarea>
				<span asp-validation-for="Biography" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Imdb"></label>
				<textarea asp-for="Imdb" class="form-control">@Model.Imdb</textarea>
				<span asp-validation-for="Imdb" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
				<input type="file" name="file" class="form-control" />
			</div>

			<div class="mb-3">
				<label asp-for="PlaceOfBirth"></label>
				<textarea asp-for="PlaceOfBirth" class="form-control">@Model.PlaceOfBirth</textarea>
				<span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="isDirector"></label><br />
				<input type="radio" asp-for="isDirector" value="true" /> Director
				<input type="radio" asp-for="isDirector" value="false" /> Cast
				<span asp-validation-for="isDirector" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-md-4">

			@* <div class="mt-3">
				<img src="/persons/@Model.ImageUrl" width="300" />
			</div> *@

			<div class="card" style="width: 18rem;">
				<img src="/persons/@Model.ImageUrl" class="card-img-top">
				<div class="card-body">
					<h5 class="card-title">@Model.Name</h5>
					<a href="/persons/persondetails" class="btn btn-primary">Details</a>
				</div>
			</div>

		</div>
	</div>

</form>


