@model UsersViewModel

<h1>User List</h1>
<hr />


<table class="table table-striped table-hover table-bordered">
	<thead>
		<tr>
			<th style="width:30px">#</th>
			<th style="width:50px">ImageUrl</th>
			<th style="width:200px">Name</th>
			<th style="width:200px">Username</th>
			<th>Email</th>
			<th style="width:160px"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.Users)
		{
			<tr>
				<td>@user.UserId</td>
				<td> <img src="/users/@user.ImageUrl" width="80" /></td>
				<td>@user.Name</td>
				<td>@user.Username</td>
				<td>@user.Email</td>
				<td>
					<a href="/users/userupdate/@user.UserId" class="btn btn-primary btn-sm">Update</a>
					<form action="/users/userdelete" method="post" style="display: inline">
						<input type="hidden" name="UserId" value="@user.UserId" />
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>

