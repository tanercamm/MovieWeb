@model MovieWeb.Entity.Movie

<div class="card mb-3">
	<div class="row">
		<div class="col-md-3">
			<img src="/img/@Model.ImageUrl" alt="@Model.Title" width="200px" />
		</div>
		<div class="col-md-9">
			<div class="card-body">
				<h5 class="card-title">@Model.Title</h5>
				<div>
					<a class="btn btn-primary" asp-controller="Movies" asp-action="Details"
					   asp-route-id="@Model.MovieId">Details</a>

				</div>
			</div>
		</div>
	</div>
</div>
